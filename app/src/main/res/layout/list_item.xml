<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/image_height_width"
    >

    <ImageView
        android:id="@+id/image_attractions"
        android:layout_width="@dimen/image_height_width"
        android:layout_height="@dimen/image_height_width"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/title_attractions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingLeft="@dimen/left_padding_textViews"
        android:textStyle="bold"/>


        <TextView
            android:id="@+id/description_attractions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/left_padding_textViews"/>

    </LinearLayout>
</LinearLayout>